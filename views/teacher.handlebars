<div class="container">
    <div class="card-panel teal">
        <span class="white-text">
            <h2>{{user.firstName}} {{user.lastName}}'s Teacher Dashboard</h2>
        </span>
    </div>
    <div class="row">
        <div class="col s12 m5">
            <div class="card-panel teal">
                <span class="white-text">
                    <h5>YOUR DOCUMENTS:</h5>
                    <ul>
                        {{#each document}}
                        {{>docs/doc-block}}
                        {{/each}}
                    </ul>
                </span>
                <a href="/newdoc"><button type="submit" class="btn btn-default white teal-text">Add HW/NOTE</button></a>
            </div>
        </div>
        <div class="col s12 m5">
            <div class="card-panel teal">
                <span class="white-text">
                    <h5>YOUR TUTOR SESSIONS:</h5>
                    <ul>
                        {{#each session}}
                        {{>docs/session-block}}
                        {{/each}}
                    </ul>
                </span>
                <a href="/schedule"><button type="submit" class="btn btn-default white teal-text">Add Tutor Session</button></a>
            </div>
        </div>
        <div class="col s12 m5">
            <div class="card-panel teal grades">
                <button type="submit" class="btn btn-default white teal-text" id="gradebook-btn">Teacher Gradebook</button>
            </div>
        </div>
    </div>

</div>
<script src="/js/teacher.js"></script>