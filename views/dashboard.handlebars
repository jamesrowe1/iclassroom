<div class="container dashboard-bg>

    <div class="card-panel teal">
        <span>
            <h2>{{user.firstName}} {{user.lastName}}'s Dashboard</h2>
        </span>
    </div>
    <div class="row">
        <div class="col s12 m5">
            <div class="card-panel teal">
                    <h5>YOUR DOCUMENTS:</h5>
                    <ul>
                        {{#each document}}
                        {{>docs/doc-block}}
                        {{/each}}
                    </ul>
                <a href="/newdoc"><button type="submit" class="btn btn-default white teal-text">Add HW/NOTE</button></a>
            </div>
        </div>
        <div class="col s12 m5">
            <div class="card-panel teal">
                <span class="white-text">
                    <h5>TOP-GRADED DOCUMENTS:</h5>
                    <ul>
                        {{#each topDocument}}
                        {{>docs/doc-block}}
                        {{/each}}
                    </ul>
                </span>
            </div>
        </div>
        <div class="col s12 m5">
            <div class="card-panel teal">

                <span class="white-text">
                    <h5>YOUR TUTORING SESSIONS:</h5>
                    <ul>
                        {{#each session}}
                        {{>docs/session-block}}
                        {{/each}}
                    </ul>
                </span>
                <a href="/schedule"><button type="submit" class="btn btn-default white teal-text">Add Tutor
                        Session</button></a>
            </div>
        </div>
    </div>
</div>
<script src="/js/dashboard.js"></script>