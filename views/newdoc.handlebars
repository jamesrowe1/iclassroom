<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>SHARE A NEW DOCUMENT</h2>
            <form class="newdoc">
                <div class="form-group">
                    <label for="select-doc">What type of document do you want to share?</label>
                    <select name="doctype" class="form-control" id="type-choice" placeholder="Homework">
                        <option value="homework">Homework Assignment</option>
                        <option value="note">Note</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="inputDocumentTitle">What's the title of your homework assignment/note?</label>
                    <input type="text" class="form-control" id="document-title" placeholder="Louisiana Purchase" />
                </div>
                <div class="input-field col s12">
                    <textarea id="document-body" class="materialize-textarea"
                        placeholder="The Louisiana Purchase did not include Alabama. Sorry Nathan."></textarea>
                    <label for="docbody">Enter document text here</label>
                </div>
                <button type="submit" class="btn btn-default" id="submit-document">
                    Submit Document
                </button>
            </form>
        </div>
    </div>
</div>